<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <LinearLayout
        android:id="@+id/integral_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/integral_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_ff"
        android:gravity="center"
        android:layout_marginTop="@dimen/ds_70"
        android:textSize="@dimen/fs_130"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/animationIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:padding="5px"
        android:src="@drawable/gold"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_110"
            android:layout_marginRight="@dimen/ds_110"
            android:background="@drawable/picture1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_480"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ds_120"
                android:layout_marginLeft="@dimen/ds_120"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_one"
                    android:enabled="false"
                    android:layout_width="@dimen/ds_150"
                    android:layout_height="@dimen/ds_150"
                    android:layout_marginLeft="@dimen/ds_150"
                    android:background="@drawable/text_integral"
                    android:gravity="center"
                    android:text="@string/one"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>

                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="@dimen/ds_150"
                    android:layout_height="@dimen/ds_150"
                    android:enabled="false"
                    android:layout_marginLeft="@dimen/ds_60"
                    android:gravity="center"
                    android:background="@drawable/text_integral"
                    android:text="@string/two"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>
                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="@dimen/ds_150"
                    android:layout_height="@dimen/ds_150"
                    android:enabled="false"
                    android:layout_marginLeft="@dimen/ds_60"
                    android:background="@drawable/text_integral"
                    android:gravity="center"
                    android:text="@string/three"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_50"
                android:layout_marginRight="@dimen/ds_120"
                android:layout_marginLeft="@dimen/ds_120"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_four"
                    android:enabled="false"
                    android:layout_width="@dimen/ds_150"
                    android:layout_height="@dimen/ds_150"
                    android:layout_marginLeft="@dimen/ds_70"
                    android:background="@drawable/text_integral"
                    android:gravity="center"
                    android:text="@string/one"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>

                <TextView
                    android:id="@+id/tv_five"
                    android:layout_width="@dimen/ds_150"
                    android:layout_height="@dimen/ds_150"
                    android:enabled="false"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:gravity="center"
                    android:background="@drawable/text_integral"
                    android:text="@string/two"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>
                <TextView
                    android:enabled="false"
                    android:id="@+id/tv_six"
                    android:layout_width="@dimen/ds_150"
                    android:layout_height="@dimen/ds_150"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:background="@drawable/text_integral"
                    android:gravity="center"
                    android:text="@string/three"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>
                <TextView
                    android:id="@+id/tv_server"
                    android:enabled="false"
                    android:layout_width="@dimen/ds_150"
                    android:layout_height="@dimen/ds_150"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:background="@drawable/text_integral"
                    android:gravity="center"
                    android:text="@string/three"
                    android:textColor="@color/color_ff"
                    android:textSize="@dimen/fs_30"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_50"
                android:gravity="center"
                android:textColor="@color/green_light"
                android:textSize="@dimen/fs_55"
                android:text="@string/rule"/>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
