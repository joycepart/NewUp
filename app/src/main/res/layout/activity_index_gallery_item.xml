<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gallery_item_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_cc"
        android:layout_weight="1"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/id_img"
        android:layout_width="@dimen/ds_360"
        android:layout_height="@dimen/ds_360"
        android:layout_marginTop="@dimen/ds_50"
        android:layout_marginBottom="@dimen/ds_50"
        android:layout_marginLeft="@dimen/ds_30"
        android:layout_gravity="center_vertical"
        />
<LinearLayout
    android:layout_width="@dimen/ds_300"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/ds_30"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/ds_70"
        android:textSize="@dimen/ds_45" />
    <TextView
        android:id="@+id/id_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_marginTop="@dimen/ds_20"
        android:textSize="@dimen/ds_45"
        android:textColor="@color/color_c0"/>
    <TextView
        android:id="@+id/id_tirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_marginTop="@dimen/ds_20"
        android:textSize="@dimen/ds_45" />
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="@dimen/ds_30"
        android:layout_height="match_parent"
        android:background="@color/color_ff"/>
</LinearLayout>