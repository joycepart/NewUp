<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_ff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pc_img"
            android:layout_width="@dimen/ds_150"
            android:layout_height="@dimen/ds_150"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/ds_30"
            android:layout_marginBottom="@dimen/ds_20"
            android:layout_marginLeft="@dimen/ds_40"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_30"
                android:layout_marginLeft="@dimen/ds_30"
                android:text="@string/order_take_method"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_50"/>

                <TextView
                    android:id="@+id/pc_data"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_marginTop="@dimen/ds_30"
                    android:text="@string/order_take_method"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/fs_50"/>


        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/ds_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_40"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ds_80"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/professional_services"
                    android:gravity="center"
                    android:textSize="@dimen/fs_45"
                    android:textColor="@color/color_00"/>

                <Button
                    android:id="@+id/pdc_ps_btn_one"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_ps_btn_two"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_ps_btn_three"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_ps_btn_four"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_ps_btn_five"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ds_80"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/customer_services"
                    android:gravity="center"
                    android:textSize="@dimen/fs_45"
                    android:textColor="@color/color_00"/>

                <Button
                    android:id="@+id/pdc_cs_btn_one"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_cs_btn_two"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_cs_btn_three"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_cs_btn_four"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_cs_btn_five"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ds_80"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/distribution_services"
                    android:gravity="center"
                    android:textSize="@dimen/fs_45"
                    android:textColor="@color/color_00"/>

                <Button
                    android:id="@+id/pdc_ds_btn_one"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_ds_btn_two"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_ds_btn_three"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_ds_btn_four"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />
                <Button
                    android:id="@+id/pdc_ds_btn_five"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@drawable/xingxing_huang"
                    />



            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/pc_tv_pl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_00"
        android:layout_marginTop="@dimen/ds_30"
        android:textSize="@dimen/ds_45"
        android:layout_marginLeft="@dimen/ds_40"
        android:text=""/>
    <LinearLayout
        android:id="@+id/pdt_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_40"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginRight="@dimen/ds_40"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pdc_comment_img_01"
            android:layout_width="@dimen/ds_325"
            android:layout_height="@dimen/ds_325"
            android:scaleType="fitXY"

            />
        <ImageView
            android:id="@+id/pdc_comment_img_02"
            android:layout_width="@dimen/ds_325"
            android:layout_height="@dimen/ds_325"
            android:layout_marginLeft="@dimen/ds_40"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/pdc_comment_img_03"
            android:layout_width="@dimen/ds_325"
            android:layout_height="@dimen/ds_325"
            android:layout_marginLeft="@dimen/ds_40"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:layout_marginTop="@dimen/ds_50"
        android:background="@color/color_cc"/>

</LinearLayout>
