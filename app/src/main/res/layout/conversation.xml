<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_ff">

        <ImageButton
            android:id="@+id/CommodityActivity_back"
            android:layout_width="@dimen/ds_80"
            android:layout_height="@dimen/ds_80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="clickButton"
            android:background="@drawable/back"
           />

        <TextView
            android:id="@+id/OtherActivity_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="客服"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_50" />
        <ImageView
            android:id="@+id/conver_img"
            android:layout_width="@dimen/ds_80"
            android:layout_height="@dimen/ds_80"
            android:layout_marginRight="@dimen/ds_30"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/me_icon8"/>
    </RelativeLayout>
    <!-- 会话页面 Fragment -->

    <fragment
        android:id="@+id/img_home_kefu_oter"
        android:name="io.rong.imkit.fragment.ConversationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>