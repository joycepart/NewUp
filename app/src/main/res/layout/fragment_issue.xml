<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/issue_top_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/color_ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/fs_45"
                android:layout_height="@dimen/fs_45"
                android:layout_marginLeft="@dimen/fs_25"
                android:layout_marginTop="@dimen/fs_25"
                android:layout_marginBottom="@dimen/fs_25"
                android:background="@drawable/laba"
                android:id="@+id/imageView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fs_20"
                android:gravity="center"
                android:textColor="@color/color_00"
                android:id="@+id/textView"
                android:text="@string/issue_a"
                android:textSize="@dimen/fs_50"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_15"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_text1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/ll_text1_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/color_00"
                            android:ellipsize="end"
                            android:textSize="@dimen/fs_45" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/ll_text2_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text=""
                            android:textColor="@color/color_00"
                            android:textSize="@dimen/fs_45" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_30"
            android:background="@color/color_cc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/issue_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:descendantFocusability="afterDescendants"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>