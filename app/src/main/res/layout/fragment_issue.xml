<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/issue_top_img"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/ds_600"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_30"
            android:background="@color/color_cc" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/fs_45"
                android:layout_height="@dimen/fs_45"
                android:layout_marginLeft="@dimen/fs_45"
                android:layout_marginTop="@dimen/fs_25"
                android:layout_marginBottom="@dimen/fs_25"
                android:background="@drawable/laba"
                android:id="@+id/imageView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fs_45"
                android:gravity="center"
                android:id="@+id/textView"
                android:text="@string/issue_a"
                android:textSize="@dimen/fs_50"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fs_45"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds_120">
                    <LinearLayout
                        android:id="@+id/ll_text1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f1f1f1"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/ll_text1_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="学朴槿惠穿衣风格"
                            android:textColor="#3b3b3b"
                            android:ellipsize="end"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f1f1f1"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/ll_text2_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:ellipsize="end"
                            android:text="能穿出N中风格的打底衫"
                            android:textColor="#3b3b3b"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_3"
            android:background="@color/color_cc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/issue_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>