<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_cc">

        <ImageView
            android:layout_width="@dimen/ds_300"
            android:layout_height="@dimen/ds_300"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ds_400"
            android:layout_centerInParent="true"
            android:background="@drawable/siaieless2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_30"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/vouchers_no"
                android:textSize="@dimen/fs_50"
                android:textColor="@color/color_00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_30"
                android:gravity="center"
                android:text="@string/vouchers_no_no"
                android:textSize="@dimen/fs_50"
                android:textColor="@color/color_00"/>
        </LinearLayout>


</LinearLayout>
