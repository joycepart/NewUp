<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cc"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/select_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_100"
        android:layout_marginLeft="@dimen/ds_60"
        android:layout_marginRight="@dimen/ds_60"
        android:background="@color/color_ff"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/ds_80"
            android:layout_height="@dimen/ds_80"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ds_270"
            android:layout_marginTop="@dimen/ds_50"
            android:layout_marginBottom="@dimen/ds_50"
            android:background="@drawable/address_compile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/ds_50"
            android:layout_marginBottom="@dimen/ds_50"
            android:layout_marginLeft="@dimen/ds_50"
            android:text="@string/order_new_address"
            android:textSize="@dimen/fs_65"
            android:textColor="@color/color_c0"/>
    </LinearLayout>



</LinearLayout>
