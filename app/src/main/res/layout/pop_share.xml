<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_00"
        android:textSize="@dimen/fs_40"
        android:text="@string/pop_share"
        android:gravity="center"
        android:layout_marginTop="@dimen/ds_45"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_30"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/share_weixin"
                android:layout_width="@dimen/ds_180"
                android:layout_height="@dimen/ds_180"
                android:background="@drawable/weixin2friendcircle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:text="@string/pop_weixin"
                android:gravity="center"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/share_friend"
                android:layout_width="@dimen/ds_180"
                android:layout_height="@dimen/ds_180"
                android:background="@drawable/weixin2friendcircle"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:gravity="center"
                android:text="@string/pop_friend"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/share_weibo"
                android:layout_width="@dimen/ds_180"
                android:layout_height="@dimen/ds_180"
                android:background="@drawable/weibo_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:gravity="center"
                android:text="@string/pop_weibo"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_00"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_120"
        android:textColor="@color/color_00"
        android:background="@drawable/btn_grey"
        android:layout_marginTop="@dimen/ds_60"
        android:layout_marginLeft="@dimen/ds_30"
        android:layout_marginRight="@dimen/ds_30"
        android:gravity="center"
        android:textSize="@dimen/fs_45"
        android:text="@string/photo_cancel"/>

</LinearLayout>
