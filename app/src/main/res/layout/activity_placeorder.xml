<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_30"
                android:layout_marginTop="@dimen/ds_50"
                android:background="@color/color_cc" />


                <RelativeLayout
                    android:id="@+id/place_take_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ds_30">
                    <TextView
                        android:id="@+id/placord_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:layout_centerVertical="true"
                        android:text="@string/order_take_method"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>
                    <TextView
                        android:id="@+id/pla_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/placord_tv1"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:text="@string/national_package"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>
                    <ImageView
                        android:layout_width="@dimen/ds_90"
                        android:layout_height="@dimen/ds_90"
                        android:background="@drawable/home_right_arrow_icon"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/ds_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:id="@+id/place_top_img"
                        />
                </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:layout_marginTop="@dimen/ds_20"
                android:background="@color/color_cc" />


                <RelativeLayout
                    android:id="@+id/place_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ds_30">
                    <TextView
                        android:id="@+id/place_tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:layout_marginBottom="@dimen/ds_80"
                        android:text="@string/order_receipt_address"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>
                    <TextView
                        android:id="@+id/pla_tv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/place_tv_address"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:text="ageagewgm"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>
                    <ImageView
                        android:layout_width="@dimen/ds_90"
                        android:layout_height="@dimen/ds_90"
                        android:background="@drawable/home_right_arrow_icon"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/ds_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_30"
                        />
                </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:background="@color/color_cc" />

                <RelativeLayout
                    android:id="@+id/place_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ds_30">
                    <TextView
                        android:id="@+id/tv_send"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:text="@string/place_send"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>
                    <TextView
                        android:id="@+id/send_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_send"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:text="@string/order_take_method"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>

                    <ImageView
                        android:layout_width="@dimen/ds_90"
                        android:layout_height="@dimen/ds_90"
                        android:background="@drawable/home_right_arrow_icon"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/ds_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_30"
                        />
                </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_30"
                android:layout_marginTop="@dimen/ds_50"
                android:background="@color/color_cc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/place_img"
                    android:layout_width="@dimen/ds_150"
                    android:layout_height="@dimen/ds_150"
                    android:layout_marginTop="@dimen/ds_30"
                    android:layout_marginBottom="@dimen/ds_20"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:background="@drawable/service_icon2"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/place_titlt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ds_30"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:text="上面传递过来的商品名字"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/placord_dan"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/ds_30"
                            android:layout_marginTop="@dimen/ds_30"
                            android:text="@string/order_take_method"
                            android:textColor="@color/color_00"
                            android:textSize="@dimen/fs_60"/>
                        <TextView
                            android:id="@+id/placord_dan_num"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/ds_30"
                            android:layout_marginRight="@dimen/ds_30"
                            android:text="@string/order_take_method"
                            android:textColor="@color/color_00"
                            android:textSize="@dimen/fs_60"/>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:layout_marginTop="@dimen/ds_20"
                android:background="@color/color_cc" />



                <RelativeLayout
                    android:id="@+id/rel_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ds_30"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:layout_centerVertical="true"
                        android:text="@string/order_coupon"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/place_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:text="@string/order_coupon"
                            android:textColor="@color/color_00"
                            android:textSize="@dimen/fs_60"/>
                    <ImageView
                        android:layout_width="@dimen/ds_90"
                        android:layout_height="@dimen/ds_90"
                        android:layout_centerVertical="true"
                        android:background="@drawable/home_right_arrow_icon"
                        android:layout_marginRight="@dimen/ds_30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/ds_30"
                        />
                    </LinearLayout>
                </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:layout_marginTop="@dimen/ds_20"
                android:background="@color/color_cc" />

                <RelativeLayout
                    android:id="@+id/rel_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ds_30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:layout_centerVertical="true"
                        android:text="@string/order_total"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>
                    <TextView
                        android:id="@+id/place_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ds_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ds_30"
                        android:text="@string/order_take_method"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>

                </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:layout_marginTop="@dimen/ds_20"
                android:background="@color/color_cc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_cc"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_marginTop="@dimen/ds_30"
                    android:layout_marginBottom="@dimen/ds_30"
                    android:text="@string/order_payment_method"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/fs_60"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:background="@color/color_cc" />
            <LinearLayout
                android:id="@+id/palce_pay_wx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_150"
                android:background="@color/color_ff"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/place_cb_wx"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:background="@drawable/selector_checkbox"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:checked="false"
                    />

                <ImageView
                    android:layout_width="@dimen/ds_130"
                    android:layout_height="@dimen/ds_130"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:background="@drawable/service_icon2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:text="@string/order_weixin"
                    android:textSize="@dimen/fs_65"
                    android:textColor="@color/color_00"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:layout_marginTop="@dimen/ds_20"
                android:background="@color/color_cc" />
            <LinearLayout
                android:id="@+id/palce_pay_alipay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_150"
                android:background="@color/color_ff"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/place_cb_zhi"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:background="@drawable/selector_checkbox"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:checked="false"
                    />
                <ImageView
                    android:layout_width="@dimen/ds_130"
                    android:layout_height="@dimen/ds_130"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:background="@drawable/service_icon1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:text="@string/order_zhifubao"
                    android:textSize="@dimen/fs_65"
                    android:textColor="@color/color_00"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:layout_marginTop="@dimen/ds_20"
                android:background="@color/color_cc" />
            <LinearLayout
                android:id="@+id/palce_pay_balance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_150"
                android:background="@color/color_ff"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/place_cb_hui"
                    android:layout_width="@dimen/ds_80"
                    android:layout_height="@dimen/ds_80"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:background="@drawable/selector_checkbox"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:checked="false"
                    />
                <ImageView
                    android:layout_width="@dimen/ds_130"
                    android:layout_height="@dimen/ds_130"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/ds_40"
                    android:background="@drawable/service_icon3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:text="@string/order_member"
                    android:textSize="@dimen/fs_65"
                    android:textColor="@color/color_00"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_3"
                android:layout_marginTop="@dimen/ds_20"
                android:background="@color/color_cc" />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/item_placeorder_bottom"/>
</LinearLayout>
