<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds_200"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/placeorder_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_50"
            android:gravity="center"
            android:text="@string/me_income_meney"
            android:textSize="@dimen/fs_100"
            android:textColor="@color/color_00"/>
        <LinearLayout
            android:id="@+id/prod_btm_kf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_50"
            android:layout_toRightOf="@+id/placeorder_tv"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/ds_120"
                android:layout_height="@dimen/ds_120"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ds_50"
                android:background="@drawable/detaile_talk"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ds_10"
            android:text="@string/order_contact"
            android:textSize="@dimen/fs_70"
            android:textColor="@color/color_00"/>
        </LinearLayout>
        <Button
            android:id="@+id/place_btn"
            android:layout_width="@dimen/ds_400"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/ds_50"
            android:layout_marginBottom="@dimen/ds_50"
            android:layout_marginRight="@dimen/ds_50"
            android:background="@drawable/btn_login_selector"
            android:text="@string/order_immediate"
            android:textColor="@color/color_ff"
            android:textSize="@dimen/fs_50" />
    </RelativeLayout>
</LinearLayout>
