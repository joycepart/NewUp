<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds_200"
    android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_50"
            android:gravity="center"
            android:text="@string/me_income_meney"
            android:textSize="@dimen/fs_50"
            android:textColor="@color/color_00"/>
        <TextView
            android:id="@+id/placeorder_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_20"
            android:gravity="center"
            android:text="199.00"
            android:textSize="@dimen/fs_50"
            android:textColor="@color/color_00"/>
    <LinearLayout
        android:id="@+id/pro_bottom_kf"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/ds_60">
            <ImageView
                android:layout_width="@dimen/ds_100"
                android:layout_height="@dimen/ds_100"
                android:layout_gravity="center"
                android:background="@drawable/detaile_talk"/>
        <TextView
            android:layout_width="@dimen/ds_140"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:layout_marginLeft="@dimen/ds_10"
            android:text="@string/order_contact"
            android:textSize="@dimen/fs_50"
            android:textColor="@color/color_00"/>
    </LinearLayout>
        <Button
            android:id="@+id/place_btn"
            android:layout_width="@dimen/ds_400"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ds_70"
            android:background="@drawable/btn_click"
            android:text="@string/order_immediate"
            android:textColor="@color/color_ff"
            android:textSize="@dimen/fs_60" />
</LinearLayout>
