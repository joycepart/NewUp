<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tran_term"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_30"
            android:layout_marginTop="@dimen/ds_30"
            android:text="第11期"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_55"/>
            <TextView
                android:id="@+id/tran_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/ds_30"
                android:layout_marginTop="@dimen/ds_30"
                android:text="Apple SE 16g "
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_55"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tran_rad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/ds_30"
            android:layout_marginTop="@dimen/ds_30"
            android:text="@string/issue_random"
            android:textColor="@color/color_c0"
            android:textSize="@dimen/fs_55"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_30"
            android:layout_marginTop="@dimen/ds_30"
            android:layout_marginRight="@dimen/ds_30"
            android:background="@drawable/work_bottom"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_100">
            <TextView
                android:id="@+id/ple"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_30"
                android:layout_marginTop="@dimen/ds_30"
                android:text="总需要人数3288人次"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_55"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/ds_30"
                android:layout_marginRight="@dimen/ds_30"
                android:text="@string/tran_details"
                android:textColor="@color/color_c0"
                android:textSize="@dimen/fs_55"/>

        </RelativeLayout>
    </LinearLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_c0"
        android:layout_marginRight="@dimen/ds_30"
        android:layout_marginLeft="@dimen/ds_30"
        android:layout_marginTop="@dimen/ds_60"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_180"
            android:layout_marginTop="@dimen/ds_80"
            android:paddingBottom="@dimen/ds_10"
            android:paddingTop="@dimen/ds_10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/issue_luckynumber"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_ff"/>
            <TextView
                android:id="@+id/issue_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_20"
                android:text="@string/address_cities"
                android:textSize="@dimen/fs_60"
                android:textColor="@color/color_f0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_180"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/issue_lucky_user"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_ff"/>
            <TextView
                android:id="@+id/issue_tv_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_20"
                android:text="@string/address_cities"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_ff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_180"
            android:layout_marginTop="@dimen/ds_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/issue_lucky_data"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_ff"/>
            <TextView
                android:id="@+id/issue_tv_data"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_20"
                android:text="@string/address_cities"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_ff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_180"
                android:text="@string/issue_participation"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_ff"/>
            <TextView
                android:id="@+id/issue_tv_ple"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_20"
                android:text="@string/address_cities"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_ff"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ds_30">
            <ImageView
                android:id="@+id/rl_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ds_20"
                android:layout_alignParentRight="true"
                android:background="@drawable/home_door"/>
            <TextView
                android:id="@+id/issue_calculation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rl_img"
                android:layout_marginRight="@dimen/ds_10"
                android:text="@string/issue_calculation"
                android:textSize="@dimen/fs_40"
                android:textColor="@color/color_ff"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/ds_220"
        android:layout_height="@dimen/ds_220"
        android:src="@drawable/zhongjiangzhe"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="@dimen/ds_100"
        android:layout_height="@dimen/ds_100"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>
</FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_30"
        android:layout_marginTop="@dimen/ds_30"
        android:background="@color/color_cc"/>
    <TextView
        android:id="@+id/issue_tv_yn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ds_30"
        android:gravity="center"
        android:textSize="@dimen/fs_65"
        android:textColor="@color/color_00"
        android:text="@string/issue_no_activity"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:gravity="center"
        android:id="@+id/past_product_lin"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/ds_90"
                android:layout_height="@dimen/ds_90"
                android:background="@drawable/home_right_arrow_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ds_30"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:text="@string/product_num"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/fs_60"/>
                <TextView
                    android:id="@+id/tarn_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/color_c0"
                    android:textSize="@dimen/fs_60"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/issue_product__img"
                    android:gravity="center"
                    android:text="@string/product_text"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/fs_60"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_30"
        android:background="@color/color_cc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:id="@+id/issue_product_it"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/ds_90"
                android:layout_height="@dimen/ds_90"
                android:background="@drawable/home_right_arrow_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ds_30"
                android:layout_centerVertical="true"
                android:id="@+id/issue_product__img" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/ds_30"
                android:text="@string/issue_imagetext"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_60"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/issue_product__img"
                android:gravity="center"
                android:text="@string/issue_wifi"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_60"/>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_30"
        android:background="@color/color_cc"/>

</LinearLayout>
