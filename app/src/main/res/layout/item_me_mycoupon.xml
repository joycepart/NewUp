<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_120"
        android:background="@color/color_ff"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mycoupon_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/me_code"
            android:imeOptions="actionNext"
            android:maxLength="11"
            android:paddingLeft="@dimen/ds_50"
            android:paddingTop="@dimen/ds_10"
            android:paddingBottom="@dimen/ds_10"
            android:phoneNumber="true"
            android:textColor="@color/color_00"
            android:textColorHint="@color/color_cc"
            android:textSize="@dimen/fs_60" />
        <View
            android:id="@+id/curing_clean"
            android:layout_width="@dimen/ds_1"
            android:layout_height="match_parent"
            android:background="@color/color_00"/>
        <TextView
            android:id="@+id/mycoupon_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_20"
            android:layout_marginRight="@dimen/ds_20"
            android:gravity="center"
            android:padding="@dimen/ds_20"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_65"
            android:text="@string/me_exchange"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:background="@color/color_cc" />

</LinearLayout>
