<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/order_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_130"
        android:layout_marginTop="@dimen/ds_15"
        android:background="@color/color_ff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ds_30"
            android:text="@string/indiana_order"
            android:textSize="@dimen/fs_45"
            android:textColor="@color/color_00"/>
        <TextView
            android:id="@+id/indiana_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="123445678888"
            android:textSize="@dimen/fs_45"
            android:textColor="@color/color_00"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:background="@color/color_cc"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_250"
        android:background="@color/color_ff"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/records_img"
            android:layout_width="@dimen/ds_200"
            android:layout_height="@dimen/ds_200"
            android:layout_marginLeft="@dimen/ds_30"
            android:background="@drawable/btn_while"
            android:layout_gravity="center"
            />
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ds_20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/records_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:textSize="@dimen/fs_45"
                android:textColor="@color/color_00"/>
            <TextView
                android:id="@+id/records_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fs_45"
                android:text=""
                android:textColor="@color/color_00"/>
            <TextView
                android:id="@+id/records_statu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fs_45"
                android:text=""
                android:textColor="@color/color_c0"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
