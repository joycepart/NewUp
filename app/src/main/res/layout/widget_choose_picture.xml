<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_30"
        android:layout_marginRight="@dimen/ds_30"
        android:layout_marginTop="@dimen/ds_30"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_take_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_150"
            android:gravity="center"
            android:background="@drawable/btn_photo_top"
            android:text="@string/photo_graph"
            android:textColor="@color/green_light"
            android:textSize="@dimen/fs_48"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_1"
            android:background="@color/color_cc"/>

        <Button
            android:id="@+id/btn_choose_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_150"
            android:gravity="center"
            android:background="@drawable/btn_photo_bottom"
            android:text="@string/photo_choose"
            android:textColor="@color/green_light"
            android:textSize="@dimen/fs_48"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:layout_margin="@dimen/ds_30"
        android:background="@drawable/btn_photo"
        android:gravity="center"
        android:text="@string/photo_cancel"
        android:textColor="@color/green_light"
        android:textSize="@dimen/fs_48"/>

</LinearLayout>
