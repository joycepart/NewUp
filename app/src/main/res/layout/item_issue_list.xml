<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_300"
        android:layout_marginTop="@dimen/ds_40"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/issue_img"
        android:layout_width="@dimen/ds_250"
        android:layout_height="@dimen/ds_250"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/ds_50"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/ds_30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/issue_tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/app_day"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_50"/>
            <TextView
                android:id="@+id/issue_tv2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds_30"
                android:text="@string/app_day"
                android:singleLine="true"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_50"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/ds_400"
            android:layout_height="@dimen/ds_100"
            android:layout_marginTop="@dimen/ds_40"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/ds_30"
            android:background="@drawable/qiang"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_10"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/issue_indiana"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_45"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/issue_progress"
                android:textColor="@color/color_ff"
                android:textSize="@dimen/fs_70"/>
            <TextView
                android:id="@+id/issue_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/fs_45"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ds_10"
        android:layout_height="@dimen/ds_25"
        android:background="@color/color_cc"/>

</LinearLayout>
