<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/information_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ds_40"
        android:paddingTop="@dimen/ds_20"
        android:paddingBottom="@dimen/ds_20">
    <ImageView
        android:id="@+id/information_img"
        android:layout_width="@dimen/ds_210"
        android:layout_height="@dimen/ds_210"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/ds_50"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ds_30"
        android:orientation="vertical">
        <TextView
            android:id="@+id/information_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_day"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_50"/>
        <TextView
            android:id="@+id/information_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_40"
            android:text="@string/app_day"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color_33"
            android:textSize="@dimen/fs_45"/>

    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:background="@color/color_f9"/>

</LinearLayout>
