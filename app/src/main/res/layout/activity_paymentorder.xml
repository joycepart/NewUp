<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pay_tit_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_500"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_90"
                android:layout_marginTop="@dimen/ds_30"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/ds_300"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:gravity="center_vertical"
                    android:text="@string/order_take_method"
                    android:textSize="@dimen/fs_50"
                    android:textColor="@color/color_00"/>
                <TextView
                    android:id="@+id/pay_tv_get"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/address_cities"
                    android:layout_marginLeft="@dimen/fs_20"
                    android:textSize="@dimen/fs_50"
                    android:textColor="@color/color_00"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_1"
                android:background="@color/color_cc"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_90"
                android:layout_marginTop="@dimen/ds_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pay_mode"
                    android:layout_width="@dimen/ds_300"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:gravity="center_vertical"
                    android:text="@string/order_receipt_address"
                    android:textSize="@dimen/fs_50"
                    android:textColor="@color/color_00"/>
                <TextView
                    android:id="@+id/pay_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/order_receipt_address"
                    android:layout_marginLeft="@dimen/fs_20"
                    android:textSize="@dimen/fs_50"
                    android:textColor="@color/color_00"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_90"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pay_tv_pri"
                    android:layout_width="@dimen/ds_300"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:gravity="center_vertical"
                    android:text="@string/order_receipt_address"
                    android:textSize="@dimen/fs_50"
                    android:textColor="@color/color_00"/>
                <TextView
                    android:id="@+id/pay_tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/order_receipt_address"
                    android:layout_marginLeft="@dimen/fs_20"
                    android:textSize="@dimen/fs_50"
                    android:textColor="@color/color_00"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_1"
                android:background="@color/color_cc"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_90"
                android:layout_marginTop="@dimen/ds_30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pay_send"
                    android:layout_width="@dimen/ds_300"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:gravity="center_vertical"
                    android:text="@string/place_send"
                    android:textSize="@dimen/fs_50"
                    android:textColor="@color/color_00"/>
                <TextView
                    android:id="@+id/pay_tv_send"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/address_cities"
                    android:layout_marginLeft="@dimen/fs_20"
                    android:textSize="@dimen/fs_50"
                    android:textColor="@color/color_00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_90"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pay_tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:gravity="center_vertical"
                    android:text="@string/order_receipt_address"
                    android:textSize="@dimen/fs_50"
                    android:textColor="@color/color_00"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_30"
                android:background="@color/color_cc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_40"
                android:padding="@dimen/ds_30"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pay_curing_img"
                    android:layout_width="@dimen/ds_280"
                    android:layout_height="@dimen/ds_280"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="@dimen/ds_40"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ds_100">
                        <TextView
                            android:id="@+id/pay_curing_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/app_day"
                            android:textColor="@color/color_00"
                            android:textSize="@dimen/fs_55"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/pay_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/curing_nm"
                            android:textColor="@color/color_00"
                            android:textSize="@dimen/fs_55"/>
                        <TextView
                            android:id="@+id/pay_curing_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/ds_30"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:text="199"
                            android:textColor="@color/color_00"
                            android:textSize="@dimen/fs_55"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rel_coupon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_120"
                android:layout_marginTop="@dimen/ds_30"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/ds_30"
                    android:layout_centerVertical="true"
                    android:text="@string/order_coupon"
                    android:textColor="@color/color_00"
                    android:textSize="@dimen/fs_60"/>

                    <TextView
                        android:id="@+id/place_coupon"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/ds_30"
                        android:layout_centerVertical="true"
                        android:text="1111"
                        android:textColor="@color/color_00"
                        android:textSize="@dimen/fs_60"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_1"
                android:background="@color/color_cc"/>

    <RelativeLayout
        android:id="@+id/rel_total"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_120"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ds_30"
            android:layout_marginLeft="@dimen/ds_30"
            android:text="@string/order_total"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_60"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ds_30"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/place_total_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ds_20"
                android:text="@string/me_income_meney"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_60"/>

            <TextView
                android:id="@+id/pay_total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ds_30"
                android:text="11111"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_60"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginTop="@dimen/ds_20"
        android:background="@color/color_cc" />
    <include layout="@layout/item_pay"/>

</LinearLayout>

    </ScrollView>






    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:background="@color/color_cc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_180"
        >
        <TextView
            android:id="@+id/pay_tv"
            android:layout_width="@dimen/ds_250"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_30"
            android:gravity="center"
            android:text="@string/curing_inpon"
            android:textSize="@dimen/fs_55"
            android:textColor="@color/color_00"/>


        <TextView
            android:id="@+id/pay_tv_btn"
            android:layout_width="@dimen/ds_350"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ds_30"
            android:layout_marginBottom="@dimen/ds_30"
            android:gravity="center"
            android:layout_marginRight="@dimen/ds_30"
            android:background="@drawable/prompt_box"
            android:layout_alignParentRight="true"
            android:text="@string/order_payment"
            android:textSize="@dimen/fs_55"
            android:textColor="@color/color_ff"/>
    </RelativeLayout>
</LinearLayout>
