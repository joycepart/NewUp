<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_cc"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_30"
            android:layout_marginTop="@dimen/ds_30"
            android:layout_marginBottom="@dimen/ds_30"
            android:text="@string/order_payment_method"
            android:textColor="@color/color_00"
            android:textSize="@dimen/fs_50"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:background="@color/color_cc" />
    <LinearLayout
        android:id="@+id/palce_pay_wx"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:background="@color/color_ff"
        android:orientation="horizontal">
        <CheckBox
            android:clickable="false"
            android:id="@+id/place_cb_wx"
            android:layout_width="@dimen/ds_60"
            android:layout_height="@dimen/ds_60"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@drawable/selector_checkbox"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="false"
            />

        <ImageView
            android:layout_width="@dimen/ds_110"
            android:layout_height="@dimen/ds_110"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@drawable/service_icon2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ds_30"
            android:text="@string/order_weixin"
            android:textSize="@dimen/fs_50"
            android:textColor="@color/color_00"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginTop="@dimen/ds_20"
        android:background="@color/color_cc" />
    <LinearLayout
        android:id="@+id/palce_pay_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:background="@color/color_ff"
        android:orientation="horizontal">
        <CheckBox
            android:clickable="false"
            android:id="@+id/place_cb_zhi"
            android:layout_width="@dimen/ds_60"
            android:layout_height="@dimen/ds_60"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@drawable/selector_checkbox"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="false"
            />
        <ImageView
            android:layout_width="@dimen/ds_110"
            android:layout_height="@dimen/ds_110"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@drawable/service_icon1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ds_30"
            android:text="@string/order_zhifubao"
            android:textSize="@dimen/fs_50"
            android:textColor="@color/color_00"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginTop="@dimen/ds_20"
        android:background="@color/color_cc" />
    <LinearLayout
        android:id="@+id/palce_pay_balance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_150"
        android:background="@color/color_ff"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/place_cb_hui"
            android:clickable="false"
            android:layout_width="@dimen/ds_60"
            android:layout_height="@dimen/ds_60"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@drawable/selector_checkbox"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="false"
            />
        <ImageView
            android:layout_width="@dimen/ds_130"
            android:layout_height="@dimen/ds_130"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@drawable/service_icon3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ds_30"
            android:text="@string/order_member"
            android:textSize="@dimen/fs_50"
            android:textColor="@color/color_00"/>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ds_30"
            android:text=""
            android:textSize="@dimen/fs_50"
            android:textColor="@color/color_00"/>
    </LinearLayout>

</LinearLayout>
