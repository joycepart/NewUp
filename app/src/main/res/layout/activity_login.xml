<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_btn_close"
        android:layout_marginTop="@dimen/ds_30"
        android:layout_marginLeft="@dimen/ds_30"
        android:layout_width="@dimen/ds_80"
        android:layout_height="@dimen/ds_80"
        android:background="@drawable/login_close"
        android:padding="15.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_80"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/ds_420"
            android:layout_height="@dimen/ds_260"
            android:src="@drawable/qingshe_dl" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ds_150"
            android:layout_marginLeft="@dimen/ds_70"
            android:layout_marginRight="@dimen/ds_70"
            android:layout_marginTop="@dimen/ds_90"
            android:background="@drawable/login_et"
            android:padding="5.0dip" >

            <ImageView
                android:id="@+id/lg_imgbtn"
                android:layout_width="@dimen/ds_300"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/color_ff"
                android:paddingLeft="@dimen/ds_20"
                android:paddingRight="@dimen/ds_20"
                android:src="@drawable/search_clear_icon" />

            <EditText
                android:id="@+id/login_et_num"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@color/color_ff"
                android:hint="@string/login_et_ip"
                android:imeOptions="actionNext"
                android:maxLength="11"
                android:padding="@dimen/ds_20"
                android:textColor="@color/color_00"
                android:textColorHint="@color/color_cc"
                android:textSize="@dimen/fs_60" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ds_150"
            android:layout_marginLeft="@dimen/ds_70"
            android:layout_marginRight="@dimen/ds_70"
            android:layout_marginTop="@dimen/ds_50"
            android:background="@drawable/login_et"
            android:padding="5.0dip" >

            <TextView
                android:id="@+id/login_codeBtn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="验证码"
                style="@style/UserBtSendStyle"

                />

            <EditText
                android:id="@+id/login_pwdEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@id/login_codeBtn"
                android:background="@null"
                android:hint="@string/login_et_pwd"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:paddingLeft="@dimen/ds_15"
                android:textColor="@color/color_00"
                android:textColorHint="@color/color_cc"
                android:textSize="@dimen/fs_60" />
        </RelativeLayout>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_70"
            android:layout_marginRight="@dimen/ds_70"
            android:layout_marginTop="@dimen/ds_50"
            android:gravity="center_vertical" >


            <CheckBox
                android:id="@+id/setpwd_cb_agreement"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/selector_checkbox"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_30"
                android:text="@string/login_tv"
                android:textColor="@color/color_00"
                android:textSize="@dimen/fs_45" />

            <TextView
                android:id="@+id/login_readProtocalBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds_20"
                android:text="@string/login_tv_pro"
                android:textColor="@color/color_c0"
                android:textSize="@dimen/fs_45" />
        </TableRow>

        <Button
            android:id="@+id/login_loginBtn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ds_150"
            android:layout_marginLeft="@dimen/ds_250"
            android:layout_marginRight="@dimen/ds_250"
            android:layout_marginTop="@dimen/ds_100"
            android:background="@drawable/btn_login_selector"
            android:text="@string/login_lg"
            android:textColor="@color/color_ff"
            android:textSize="@dimen/fs_70" />
    </LinearLayout>




</LinearLayout>
